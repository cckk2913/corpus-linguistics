zedUrl":"https://megapx.dcard.tw/v1/images/c246c681-8ed5-4440-a2d1-eff2c4130937","thumbnail":"https://megapx-assets.dcard.tw/images/c246c681-8ed5-4440-a2d1-eff2c4130937/640.jpeg","type":"image/megapx","tags":["ANNOTATED"],"createdAt":"2019-12-17T09:38:25.036Z","updatedAt":"2019-12-18T13:19:13.842Z","width":1500,"height":2000},{"id":"ca1a3c6c-4b99-4e69-8fd1-0c06c2c1e842","url":"https://megapx.dcard.tw/v1/images/5e66555b-1744-4fb3-b833-10a1c4010062/encode/1280","normalizedUrl":"https://megapx.dcard.tw/v1/images/5e66555b-1744-4fb3-b833-10a1c4010062","thumbnail":"https://megapx-assets.dcard.tw/images/5e66555b-1744-4fb3-b833-10a1c4010062/640.jpeg","type":"image/megapx","tags":["ANNOTATED"],"createdAt":"2019-12-17T09:38:25.036Z","updatedAt":"2019-12-18T13:19:13.842Z","width":1024,"height":1820},{"id":"a042a09c-b710-44ab-af92-19e752c2aced","url":"https://megapx.dcard.tw/v1/images/d793927c-4b65-463d-81aa-42e6ad097c7d/encode/1280","normalizedUrl":"https://megapx.dcard.tw/v1/images/d793927c-4b65-463d-81aa-42e6ad097c7d","thumbnail":"https://megapx-assets.dcard.tw/images/d793927c-4b65-463d-81aa-42e6ad097c7d/640.jpeg","type":"image/megapx","tags":["ANNOTATED"],"createdAt":"2019-12-17T09:38:25.036Z","updatedAt":"2019-12-18T13:19:13.842Z","width":1500,"height":2000},{"id":"e4c11438-a3ac-4f6a-ae67-c81a9845ff21","url":"https://megapx.dcard.tw/v1/images/610ec46b-b672-4173-88ba-4dad1b4f50b8/encode/1280","normalizedUrl":"https://megapx.dcard.tw/v1/images/610ec46b-b672-4173-88ba-4dad1b4f50b8","thumbnail":"https://megapx-assets.dcard.tw/images/610ec46b-b672-4173-88ba-4dad1b4f50b8/640.jpeg","type":"image/megapx","tags":["ANNOTATED"],"createdAt":"2019-12-17T09:38:25.036Z","updatedAt":"2019-12-18T13:19:13.842Z","width":1500,"height":2000},{"id":"74e4bbbb-eff0-4fa2-91d5-5df41f519ce5","url":"https://megapx.dcard.tw/v1/images/61765199-08f0-4acf-832d-c7236b168b62/encode/1280","normalizedUrl":"https://megapx.dcard.tw/v1/images/61765199-08f0-4acf-832d-c7236b168b62","thumbnail":"https://megapx-ass